<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Admin</title>

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body>
    <h1>ADMIN ITEMS PAGE</h1>
    <div>
    <form action='/admin/logout' method='POST'>
          <input type="submit" value="logout" name="username" size="40">
      </form>
      <button>
        <a href="/admin/items">Item manager</a>
      </button>
      <button>
        <a href="/admin/add">Add another item</a>
      </button>
    </div>
    <div>
      <% for (i in data){ %>
        <p> "<%= data[i].item_name %>" </p>
        <p> "<%= data[i].item_description %>" </p>
        <p> $"<%= data[i].item_price %>" </p>
        <form method="post" action="/admin/items/delete">
        <input type="text" name="item_id" value= "<%= data[i].item_id %>" readonly>
        <input type="submit" value="DELETE">
        <br>
      </form>
        <% } %>
    </div>
    </body>
</html>
